{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
        "no-console": 0,
        "semi": ["error", "always"],
        "quotes": ["error", "single"],
        "linebreak-style": 0,
        "import/prefer-default-export": "off",
        "no-unused-vars": "off",
        "no-underscore-dangle": "off",
        "max-len": "off",
        "arrow-parens": "off",
        "no-unexpected-multiline": "error"
    }
}
